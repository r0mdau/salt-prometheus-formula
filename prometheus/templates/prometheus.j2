global:
  scrape_interval:     15s
  evaluation_interval: 15s
  external_labels:
    monitor: 'example'
rule_files:
scrape_configs:
  - job_name: 'prometheus'
    scrape_interval: 5s
    scrape_timeout: 5s
    static_configs:
      - targets: ['localhost:9090']
  - job_name: node
    static_configs:
      - targets:
        - 'localhost:9100'
{%- for target in pillar['targets'] %}
        - '{{ target }}:9100'
{%- endfor %}